{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "cd .. && firebase emulators:exec --project functions 'cd functions && jest'"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@functions/(.*)$": "<rootDir>/src/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@users/(.*)$": "<rootDir>/src/modules/users/$1",
      "^@userServices/(.*)$": "<rootDir>/src/modules/users/services/$1",
      "^@userFunctions/(.*)$": "<rootDir>/src/modules/users/functions/$1",
      "^@userModels/(.*)$": "<rootDir>/src/modules/users/models/$1",
      "^@userShared/(.*)$": "<rootDir>/src/modules/users/shared/$1",
      "^@userMiddleware/(.*)$": "<rootDir>/src/modules/users/shared/middleware/$1",
      "^@userTests/(.*)$": "<rootDir>/src/modules/users/tests/$1",
      "^@userIntegrationTests/(.*)$": "<rootDir>/src/modules/users/tests/integration/$1",
      "^@userUnitTests/(.*)$": "<rootDir>/src/modules/users/tests/unit/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1",
      "^@sharedMiddleware/(.*)$": "<rootDir>/src/shared/middleware/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  },
  "dependencies": {
    "express": "^4.19.2",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.5",
    "supertest": "^6.3.4"
  },
  "private": true
}
